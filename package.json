{
  "name": "nuxt-ollama",
  "version": "1.2.1",
  "description": "Easy ollama integration for Nuxt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jericho1060/nuxt-ollama.git"
  },
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Jericho",
    "url": "https://jericho.dev"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && changelogen --release && pnpm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "defu": "^6.1.4",
    "ollama": "^0.6.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.0.0",
    "@nuxt/eslint-config": "^1.10.0",
    "@nuxt/kit": "^4.2.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.0",
    "@nuxt/test-utils": "^3.20.1",
    "@types/node": "latest",
    "changelogen": "^0.6.2",
    "eslint": "^9.38.0",
    "nuxt": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5",
    "vue-tsc": "^3.1.2"
  },
  "packageManager": "pnpm@10.20.0",
  "volta": {
    "node": "24.11.0"
  }
}
